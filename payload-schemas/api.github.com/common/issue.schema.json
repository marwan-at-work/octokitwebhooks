{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common/issue.schema.json",
  "type": "object",
  "properties": {
    "active_lock_reason": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "resolved",
        "off-topic",
        "too heated",
        "spam",
        null
      ]
    },
    "assignee": {
      "oneOf": [
        {
          "$ref": "user.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "assignees": {
      "type": "array",
      "items": {
        "$ref": "user.schema.json"
      }
    },
    "author_association": {
      "$ref": "author_association.schema.json"
    },
    "body": {
      "type": [
        "string",
        "null"
      ],
      "description": "Contents of the issue"
    },
    "closed_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "comments": {
      "type": "integer"
    },
    "comments_url": {
      "type": "string",
      "format": "uri"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "draft": {
      "type": "boolean"
    },
    "events_url": {
      "type": "string",
      "format": "uri"
    },
    "html_url": {
      "type": "string",
      "format": "uri"
    },
    "id": {
      "type": "integer"
    },
    "labels": {
      "type": "array",
      "items": {
        "$ref": "label.schema.json"
      }
    },
    "labels_url": {
      "type": "string",
      "format": "uri-template"
    },
    "locked": {
      "type": "boolean"
    },
    "milestone": {
      "oneOf": [
        {
          "$ref": "milestone.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "node_id": {
      "type": "string"
    },
    "number": {
      "type": "integer"
    },
    "performed_via_github_app": {
      "oneOf": [
        {
          "$ref": "app.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "pull_request": {
      "type": "object",
      "properties": {
        "diff_url": {
          "type": "string",
          "format": "uri"
        },
        "html_url": {
          "type": "string",
          "format": "uri"
        },
        "merged_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "patch_url": {
          "type": "string",
          "format": "uri"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "reactions": {
      "$ref": "reactions.schema.json"
    },
    "repository_url": {
      "type": "string",
      "format": "uri"
    },
    "state": {
      "type": "string",
      "enum": [
        "open",
        "closed"
      ],
      "description": "State of the issue; either 'open' or 'closed'"
    },
    "state_reason": {
      "type": [
        "string",
        "null"
      ]
    },
    "timeline_url": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string",
      "description": "Title of the issue"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "url": {
      "type": "string",
      "description": "URL for the issue",
      "format": "uri"
    },
    "user": {
      "$ref": "user.schema.json"
    }
  },
  "required": [
    "url",
    "repository_url",
    "labels_url",
    "comments_url",
    "events_url",
    "html_url",
    "id",
    "node_id",
    "number",
    "title",
    "user",
    "assignees",
    "milestone",
    "comments",
    "created_at",
    "updated_at",
    "closed_at",
    "author_association",
    "active_lock_reason",
    "body",
    "reactions"
  ],
  "additionalProperties": false,
  "title": "Issue",
  "description": "The [issue](https://docs.github.com/en/rest/reference/issues) itself."
}