{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common/pull-request.schema.json",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "comments": {
          "$ref": "link.schema.json"
        },
        "commits": {
          "$ref": "link.schema.json"
        },
        "html": {
          "$ref": "link.schema.json"
        },
        "issue": {
          "$ref": "link.schema.json"
        },
        "review_comment": {
          "$ref": "link.schema.json"
        },
        "review_comments": {
          "$ref": "link.schema.json"
        },
        "self": {
          "$ref": "link.schema.json"
        },
        "statuses": {
          "$ref": "link.schema.json"
        }
      },
      "required": [
        "self",
        "html",
        "issue",
        "comments",
        "review_comments",
        "review_comment",
        "commits",
        "statuses"
      ],
      "additionalProperties": false
    },
    "active_lock_reason": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "resolved",
        "off-topic",
        "too heated",
        "spam",
        null
      ]
    },
    "additions": {
      "type": "integer"
    },
    "assignee": {
      "oneOf": [
        {
          "$ref": "user.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "assignees": {
      "type": "array",
      "items": {
        "$ref": "user.schema.json"
      }
    },
    "author_association": {
      "$ref": "author_association.schema.json"
    },
    "auto_merge": {
      "oneOf": [
        {
          "$ref": "auto-merge.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "base": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "ref": {
          "type": "string"
        },
        "repo": {
          "$ref": "repository.schema.json"
        },
        "sha": {
          "type": "string"
        },
        "user": {
          "$ref": "user.schema.json"
        }
      },
      "required": [
        "label",
        "ref",
        "sha",
        "user",
        "repo"
      ],
      "additionalProperties": false
    },
    "body": {
      "type": [
        "string",
        "null"
      ]
    },
    "changed_files": {
      "type": "integer"
    },
    "closed_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "comments": {
      "type": "integer"
    },
    "comments_url": {
      "type": "string",
      "format": "uri"
    },
    "commits": {
      "type": "integer"
    },
    "commits_url": {
      "type": "string",
      "format": "uri"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "deletions": {
      "type": "integer"
    },
    "diff_url": {
      "type": "string",
      "format": "uri"
    },
    "draft": {
      "type": "boolean",
      "description": "Indicates whether or not the pull request is a draft."
    },
    "head": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "ref": {
          "type": "string"
        },
        "repo": {
          "$ref": "repository.schema.json"
        },
        "sha": {
          "type": "string"
        },
        "user": {
          "$ref": "user.schema.json"
        }
      },
      "required": [
        "label",
        "ref",
        "sha",
        "user",
        "repo"
      ],
      "additionalProperties": false
    },
    "html_url": {
      "type": "string",
      "format": "uri"
    },
    "id": {
      "type": "integer"
    },
    "issue_url": {
      "type": "string",
      "format": "uri"
    },
    "labels": {
      "type": "array",
      "items": {
        "$ref": "label.schema.json"
      }
    },
    "locked": {
      "type": "boolean"
    },
    "maintainer_can_modify": {
      "type": "boolean",
      "description": "Indicates whether maintainers can modify the pull request."
    },
    "merge_commit_sha": {
      "type": [
        "string",
        "null"
      ]
    },
    "mergeable": {
      "type": [
        "boolean",
        "null"
      ]
    },
    "mergeable_state": {
      "type": "string"
    },
    "merged": {
      "type": [
        "boolean",
        "null"
      ]
    },
    "merged_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "merged_by": {
      "oneOf": [
        {
          "$ref": "user.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "milestone": {
      "oneOf": [
        {
          "$ref": "milestone.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "node_id": {
      "type": "string"
    },
    "number": {
      "type": "integer",
      "description": "Number uniquely identifying the pull request within its repository."
    },
    "patch_url": {
      "type": "string",
      "format": "uri"
    },
    "rebaseable": {
      "type": [
        "boolean",
        "null"
      ]
    },
    "requested_reviewers": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "user.schema.json"
          },
          {
            "$ref": "team.schema.json"
          }
        ]
      }
    },
    "requested_teams": {
      "type": "array",
      "items": {
        "$ref": "team.schema.json"
      }
    },
    "review_comment_url": {
      "type": "string",
      "format": "uri-template"
    },
    "review_comments": {
      "type": "integer"
    },
    "review_comments_url": {
      "type": "string",
      "format": "uri"
    },
    "state": {
      "type": "string",
      "enum": [
        "open",
        "closed"
      ],
      "description": "State of this Pull Request. Either `open` or `closed`."
    },
    "statuses_url": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string",
      "description": "The title of the pull request."
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "user": {
      "$ref": "user.schema.json"
    }
  },
  "required": [
    "url",
    "id",
    "node_id",
    "html_url",
    "diff_url",
    "patch_url",
    "issue_url",
    "number",
    "state",
    "locked",
    "title",
    "user",
    "body",
    "created_at",
    "updated_at",
    "closed_at",
    "merged_at",
    "merge_commit_sha",
    "assignee",
    "assignees",
    "requested_reviewers",
    "requested_teams",
    "labels",
    "milestone",
    "commits_url",
    "review_comments_url",
    "review_comment_url",
    "comments_url",
    "statuses_url",
    "head",
    "base",
    "_links",
    "author_association",
    "auto_merge",
    "active_lock_reason",
    "draft"
  ],
  "additionalProperties": false,
  "title": "Pull Request"
}