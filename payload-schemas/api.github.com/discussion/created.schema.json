{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "discussion$created",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "created"
      ]
    },
    "discussion": {
      "allOf": [
        {
          "$ref": "common/discussion.schema.json"
        },
        {
          "type": "object",
          "properties": {
            "answer_chosen_at": {
              "type": "null"
            },
            "answer_chosen_by": {
              "type": "null"
            },
            "answer_html_url": {
              "type": "null"
            },
            "locked": {
              "type": "boolean",
              "enum": [
                false
              ]
            },
            "state": {
              "type": "string",
              "enum": [
                "open",
                "converting",
                "transferring"
              ]
            }
          },
          "required": [
            "state",
            "locked",
            "answer_html_url",
            "answer_chosen_at",
            "answer_chosen_by"
          ]
        }
      ]
    },
    "installation": {
      "$ref": "common/installation-lite.schema.json"
    },
    "organization": {
      "$ref": "common/organization.schema.json"
    },
    "repository": {
      "$ref": "common/repository.schema.json"
    },
    "sender": {
      "$ref": "common/user.schema.json"
    }
  },
  "required": [
    "action",
    "discussion",
    "repository",
    "sender"
  ],
  "additionalProperties": false,
  "title": "discussion created event"
}